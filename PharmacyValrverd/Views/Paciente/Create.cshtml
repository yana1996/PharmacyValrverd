@model ProvinciaViewModel
@{
	Layout = "_Layout";
	ViewData["Title"] = "Registrar Paciente";
}
<div class="container">
	<div class="panel panel-info">
		<div class="panel-heading"><h4 class="panel-title">Registro Pacientes</h4></div>
		<div class="panel-body">
			<div class="form-body form-horizontal">
				<div class="form-group row">

					<div class="form-group row">
							<label class="col-6 control-label">Tipo Ide:</label>
							<div class="col-8">
								<select id="cmbTipo" class="form-control">
									<option value="N">Nacional</option>
									<option value="E">Extranjero</option>
								</select>
							</div>
						</div>

						<div class="form-group row">
							<label class="col-6 control-label">Cédula:</label>
							<div class="col-8">
								<input class="form-control"/>
							</div>
							@*<div class="col-2">
								<button class="form-control btn btn-info"><span class="glyphicon glyphicon-search" style="text-align:center"></span> </button>
							</div>*@
						</div>

						<div class="form-group row">
							<label class="col-6 control-label">Nombre:</label>
							<div class="col-8">
								<input class="form-control"/>
							</div>
						</div>

						<div class="form-group row">
							<label class="col-6 control-label">1° Apellido:</label>
							<div class="col-8">
								<input class="form-control"/>
							</div>
						</div>

						<div class="form-group row">
							<label class="col-6 control-label">2° Apellido:</label>
							<div class="col-8">
								<input class="form-control"/>
							</div>
						</div>

						<div class="form-group row">
							<label class="col-6 control-label">Sexo:</label>
							<div class="col-8">
								<select id="cmbTipo" class="form-control">
									<option value="M">Masculino</option>
									<option value="F">Femenino</option>
								</select>
							</div>
						</div>

						<div class="form-group row">
							<label class="col-6 control-label">Celular:</label>
							<div class="col-8">
								<input class="form-control"/>
							</div>
						</div>

						<div class="form-group row">
							<label class="col-6 control-label">Teléfono:</label>
							<div class="col-8">
								<input class="form-control"/>
							</div>
						</div>

						<div class="form-group row">
							<label class="col-6 control-label">Oficina:</label>
							<div class="col-8">
								<input class="form-control"/>
							</div>
						</div>

				</div>
			</div>
		</div>
	</div>
</div>

